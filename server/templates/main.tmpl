<html>
	<title>Debug Game</title>
	<style>
	#moves>details {
		margin-left:1em;
	}
	</style>
	<body>
		<h2>Rendered Output</h2>
		<pre>{{.Diagram}}</pre>
		<details>
			<summary>State</summary>
			<pre>{{.State}}</pre>
		</details>
		<details>
			<summary>Deck</summary>
			<pre>{{.Deck}}</pre>
		</details>
		<details id="moves">
			<summary>Moves</summary>
			{{range .Forms}}
				<details>
					<summary>Move {{.Name}}</summary>
					<form>
						<p><em>{{.Description}}</em></p>
						<p>Fields will go here</p>
					</form>
				</details>
			{{end}}
		</details>
	</body>
</html>